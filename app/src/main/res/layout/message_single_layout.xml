<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_layout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/maxresdefault" />

    <TextView
        android:id="@+id/message_single_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/message_text_background"
        android:padding="10dp"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/message_profile_layout" />

    <TextView
        android:id="@+id/message_single_layout_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/message_text_me"
        android:padding="10dp"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/message_single_layout_me"
        android:layout_alignStart="@+id/message_single_layout"
        android:layout_below="@+id/message_profile_layout"
        android:layout_toEndOf="@+id/message_profile_layout"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:scaleType="centerCrop"/>

</RelativeLayout>