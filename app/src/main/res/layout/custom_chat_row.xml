<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_row_thumb_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/maxresdefault" />

    <TextView
        android:id="@+id/custom_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Display name"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/custom_chat_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_row_thumb_img"
        android:layout_alignStart="@+id/custom_chat_name"
        android:text="last seen"
        android:textColor="#ffffff"
        android:textSize="13sp" />
</RelativeLayout>